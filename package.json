{
  "name": "sinoui-forms-library",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "ts-lib-tools test",
    "build": "lerna run build",
    "format": "ts-lib-tools format",
    "lint": "ts-lib-tools lint",
    "prepublishOnly": "ts-lib-tools build",
    "gen": "ts-lib-tools gen-module",
    "doc:dev": "docz dev",
    "doc:build": "docz build",
    "doc:publish": "docz build && gh-pages -d .docz/dist"
  },
  "prettier": {
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": "ts-lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "cross-env CI=true ts-lib-tools test",
      "eslint --fix --color",
      "git add"
    ]
  },
  "version": "0.1.0",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.5.5"
  },
  "devDependencies": {
    "@sinoui/http": "^0.2.2",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.7",
    "@testing-library/react-hooks": "^1.1.0",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "css-loader": "^3.1.0",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "gh-pages": "^2.0.1",
    "husky": "^3.0.2",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "sinoui-components": "^0.1.27",
    "style-loader": "^0.23.1",
    "styled-components": "3.4.10",
    "ts-lib-tools": "^0.3.0",
    "typescript": "^3.5.3",
    "webpack-docz-ghpages-plugin": "^0.3.0"
  },
  "jest": {
    "moduleNameMapper": {
      "@sinoui/(.*)": "<rootDir>/packages/$1/src"
    }
  }
}
